{
	"name": "SimpleLDAPAuth",
	"version": "1.0",
	"author": [
		"Shiz"
	],
	"url": "https://github.com/revspace/mediawiki-SimpleLDAPAuth",
	"descriptionmsg": "ext.simpleldapauth.desc",
	"license-name": "GPL-2.0",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},

	"AvailableRights": [
		"ext.simpleldapauth.link"
	],
	"AuthManagerAutoConfig": {
		"primaryauth": {
			"SimpleLDAPAuth": {
				"class": "MediaWiki\\Extension\\SimpleLDAPAuth\\Auth\\LDAPAuthProvider",
				"services": [
					"SimpleLDAPAuth.LDAPAuthManager"
				],
				"sort": 50
			}
		},
		"secondaryauth": {
			"ConfirmLink": {
				"class": "MediaWiki\\Auth\\ConfirmLinkSecondaryAuthenticationProvider",
				"sort": 50
			}
		}
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\SimpleLDAPAuth\\" : "src/"
	},
	"MessagesDirs": {
		"SimpleLDAPAuth": [
			"i18n"
		]
	},
	"APIModules": {
		"ext.simpleldapauth.unlink": {
			"class": "MediaWiki\\Extension\\SimpleLDAPAuth\\Api\\Unlink"
		}
	},
	"Hooks": {
		"LoadExtensionSchemaUpdates": "MediaWiki\\Extension\\SimpleLDAPAuth\\Hooks::onLoadExtensionSchemaUpdates"
	},
	"ServiceWiringFiles": ["src/ServiceWiring.php"],

	"config_prefix": "LDAPAuthProvider",
	"config": {
		"domains": []
	},
	"attributes": {
		"PluggableAuth": {
			"SimpleLDAPAuth": {
				"class": "MediaWiki\\Extension\\SimpleLDAPAuth\\Auth\\LDAPPluggableAuth",
				"services": [
					"AuthManager",
					"SimpleLDAPAuth.LDAPAuthManager"
				]
			}
		}
	},
	"load_composer_autoloader" : true,
	"manifest_version": 2
}
